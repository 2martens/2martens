{% extends '::base.html.twig' %}

{% block title %}{% trans %}name{% endtrans %}{% endblock %}

{% block body %}
<div id="main" class="container">
<header>
    <h1>{% trans %}name{% endtrans %} <small>{% trans %}nameDesc{% endtrans %}</small></h1>
</header>
<hr />
<div class="row">
    <div class="col-xs-12">
        <p>{% trans %}intro{% endtrans %}</p>
    </div>
</div>
<div>
    <div>
        <aside id="impress" class="pull-right">
            <span class="fa fa-home"></span>&nbsp;<span>{% trans %}address{% endtrans %}:</span>
            <address>
                Jim Martens<br />
                Hamburg{% if lang != 'de' %}<br />
                Germany{% endif %}
            </address>
            <div class="margin-bottom">
                <span class="fa fa-envelope"></span>&nbsp;<span>{% trans %}email{% endtrans %}:</span><br />
                <span><a href="mailto:jobs@2martens.de">jobs[at]2martens.de</a></span>
            </div>
            <div>
                <span class="fa fa-cloud"></span>&nbsp;<span>{% trans %}platforms{% endtrans %}:</span>
                <ul class="icon-buttons">
                    <li>
                        <a href="https://github.com/frmwrk123" class="btn btn-primary">
                            <span class="fa fa-github"></span>&nbsp;Github
                        </a>
                    </li>
                    <li>
                        <a href="http://stackoverflow.com/users/2615854/jim-martens" class="btn btn-primary">
                            <span class="fa fa-stack-overflow"></span>&nbsp;StackExchange
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <section>
            {% trans %}detailedDescription{% endtrans %}
        </section>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <section>
            <header>
                <h3><span class="fa fa-lightbulb-o fa-1g"></span>&nbsp;{% trans %}skills{% endtrans %}</h3>
            </header>
            <div>
                <header>
                    <h5>{% trans %}programmingAndMarkupLangs{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>PHP</li>
                    <li>JavaScript</li>
                    <li>Java</li>
                    <li>HTML</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>{% trans %}tools{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>Eclipse</li>
                    <li>vim</li>
                    <li>PHPStorm</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>{% trans %}frameworks{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>WoltLab Community Framework</li>
                    <li>Symfony</li>
                    <li>jQuery</li>
                    <li>Bootstrap</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>{% trans %}naturalLangs{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}German{% endtrans %}</li>
                    <li>{% trans %}English{% endtrans %}</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>{% trans %}favoriteSoftware{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>Firefox</li>
                    <li>VLC media player</li>
                </ul>
            </div>
        </section>
        <section>
            <header>
                <h3><span class="fa fa-book fa-1g"></span>&nbsp;{% trans %}education{% endtrans %}</h3>
            </header>
            <div>
                <header>
                    <h5>2000-2004: {% trans %}elementarySchool{% endtrans %}</h5>
                </header>
            </div>
            <div>
                <header>
                    <h5>2004-2012: {% trans %}higherSchool{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}advancedLevelMath{% endtrans %}</li>
                    <li>{% trans %}pseProfile{% endtrans %}</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>2012-{% trans %}now{% endtrans %}: {% trans %}universityHamburg{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}BScInformatics{% endtrans %}</li>
                </ul>
            </div>
        </section>
    </div>
    <div class="col-md-6">
        <header>
            <h3><span class="fa fa-rocket fa-1g"></span> {% trans %}projects{% endtrans %}</h3>
        </header>
        <div class="media">
            <a class="pull-left" href="http://www.plugins-zum-selberbauen.de">
                <img src="http://www.gravatar.com/avatar/56e3e8c0f394cc6f37d34d7f3473473b.png"
                     class="media-object" width="64" height="64" alt="" />
            </a>
            <div class="media-body">
                <h5 class="media-heading">
                    <a href="http://www.plugins-zum-selberbauen.de">Ultimate CMS Community</a>
                    <span class="job pull-right">{% trans %}founder{% endtrans %}</span>
                </h5>
                <p>
                    {% trans %}pzsDesc{% endtrans %}
                </p>
            </div>
        </div>
        <div class="media">
            <a class="pull-left" href="https://github.com/frmwrk123/de.plugins-zum-selberbauen.ultimate">
                <img src="http://www.gravatar.com/avatar/56e3e8c0f394cc6f37d34d7f3473473b.png"
                     class="media-object" width="64" height="64" alt="" />
            </a>
            <div class="media-body">
                <h5 class="media-heading">
                    <a href="https://github.com/frmwrk123/de.plugins-zum-selberbauen.ultimate">Ultimate CMS</a>
                    <span class="job pull-right">{% trans %}founder{% endtrans %} & {% trans %}mainDev{% endtrans %}</span>
                </h5>
                <p>
                    {% trans %}ultimateCMSDesc{% endtrans %}
                </p>
            </div>
        </div>
        <div class="media">
            <a class="pull-left" href="https://github.com/frmwrk123/symfony-wcf">
                <img src="http://www.gravatar.com/avatar/56e3e8c0f394cc6f37d34d7f3473473b.png"
                     class="media-object" width="64" height="64" alt="" />
            </a>
            <div class="media-body">
                <h5 class="media-heading">
                    <a href="https://github.com/frmwrk123/symfony-wcf">WCF Extensions</a>
                    <span class="job pull-right">{% trans %}founder{% endtrans %} & {% trans %}mainDev{% endtrans %}</span>
                </h5>
                <p>
                    {% trans %}symfonyWCFDesc{% endtrans %}
                </p>
            </div>
        </div>
        <div class="media">
            <img src="http://www.gravatar.com/avatar/56e3e8c0f394cc6f37d34d7f3473473b.png"
                 class="pull-left media-object" width="64" height="64" alt="" />
            <div class="media-body">
                <h5 class="media-heading">
                    WCF Plugins
                </h5>
                <p>
                    {% trans %}wcfPluginsDesc{% endtrans %}
                </p>
            </div>
        </div>
        <div class="media">
            <a class="pull-left" href="https://github.com/WoltLab/WCF">
                <img src="https://www.gravatar.com/avatar/08538511cd161adb9fa81bba6774f242"
                     class="media-object" width="64" height="64" alt="" />
            </a>
            <div class="media-body">
                <h5 class="media-heading">
                    <a href="https://github.com/WoltLab/WCF">WCF</a>
                    <span class="job pull-right">{% trans %}contributor{% endtrans %}</span>
                </h5>
                <p>
                    {% trans %}wcfDesc{% endtrans %}
                </p>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <header class="center">
        <h2 class="center-block"><span class="fa fa-check fa-1g"></span>&nbsp;{% trans %}expectations{% endtrans %}</h2>
    </header>
    <div class="col-md-6">
        <section>
            <header>
                <h3><span class="fa fa-exclamation fa-1g"></span>&nbsp;{% trans %}requirements{% endtrans %}</h3>
            </header>
            <div>
                <header>
                    <h5>{% trans %}payment{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}geq20Euro{% endtrans %}</li>
                    <li>{% trans %}max10Hours{% endtrans %}</li>
                    <li>{% trans %}freeWorkingTime{% endtrans %}</li>
                </ul>
            </div>
            <div>
                <header>
                    <h5>{% trans %}kindOfWork{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}noGirlForEverything{% endtrans %}</li>
                    <li>{% trans %}noHighPressure{% endtrans %}</li>
                    <li>{% trans %}noMissionCritical{% endtrans %}</li>
                </ul>
            </div>
        </section>
    </div>
    <div class="col-md-6">
        <section>
            <header>
                <h3><span class="fa fa-compass fa-1g"></span> {% trans %}preferable{% endtrans %}</h3>
            </header>
            <div>
                <header>
                    <h5>{% trans %}kindOfWork{% endtrans %}</h5>
                </header>
                <ul class="items">
                    <li>{% trans %}whenItsDone{% endtrans %}</li>
                    <li>{% trans %}myOwnProjects{% endtrans %}</li>
                </ul>
            </div>
        </section>
    </div>
</div>
<footer class="hr">
    <a class="pull-right" href="#impress">{% trans %}impress{% endtrans %}</a>
    Copyright &copy; 2013-2014 - Jim Martens
</footer>
</div>

{% endblock %}
