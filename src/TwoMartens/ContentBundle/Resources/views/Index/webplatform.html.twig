{% extends '::base.html.twig' %}

{% block title %}2martens Web Platform{% endblock %}
{% block bodyClass %}class="pitch"{% endblock %}

{% block body %}
<header class="page-header">
    <a id="top"></a>
    <div class="container-fluid center">
        <div class="row">
            <div class="col-md-2 col-sm-2 col-md-offset-2 col-sm-offset-2">
                <div class="logo">
                    <img src="{{ asset('logo.svg') }}" width="256" height="256" />
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <h1>Build web applications with ease</h1>
                <p class="lead">
                    The 2martens Web Platform (2WP) provides a whole array
                    of useful (community) functionality out of the house.
                    All you have to do is develop your application. 2WP does
                    the rest.
                </p>
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
                        <p class="button-row">
                            <a class="btn btn-large btn-success" 
                               href="https://github.com/2martens/web-platform/blob/master/CONTRIBUTING.md">
                                <span class="fa fa-plus fa-2x pull-left"></span>
                                Contribute
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="menu">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
                <nav class="mainMenu">
                    <ul>
                        <li>
                            <a id="talks" class="btn btn-large btn-default" href="{{ path('talks') }}">Talks</a>
                        </li>
                    </ul>
                    <span>Features for</span>
                    <ul>
                        <li><a id="buttonAdmin" class="btn btn-large btn-default" href="{{ path('webplatform') }}">Admin</a></li>
                        <li><a id="buttonDev" class="btn btn-large btn-default" href="{{ path('webplatform') }}">Developer</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<div id="main">
    <div id="mainAdmin">
