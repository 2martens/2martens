    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-md-offset-4 col-sm-offset-4">
                <small class="copyright">
                    Copyright &copy; 2013-2014 - Jim Martens
                </small>
            </div>
            <div class="col-md-2 col-sm-2">
                <span class="fa fa-step-backward fa-rotate-90"></span><a id="backToTop" class="navLinks" href="{{ path('webplatform') }}"> Back to top</a>
            </div>
        </div>
    </div>
</footer>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript">
        //<![CDATA[
            $(function() {
                $('#buttonAdmin').click(function(event) {
                    event.preventDefault();
                    $('#mainDev').hide();
                    $('#mainAdmin').show();
                });
                $('#buttonDev').click(function(event) {
                    event.preventDefault();
                    $('#mainAdmin').hide();
                    $('#mainDev').show();
                });
                $('#backToTop').click(function(event) {
                    event.preventDefault();
                    $('html, body').animate({scrollTop: 0}, 'slow');
                });
                $('#mainDev').hide();
            });
        //]]>
    </script>
{% endblock %}
